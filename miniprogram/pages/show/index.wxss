/* index.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.header {
  padding: 20rpx;
  text-align: center;
  background-color: #ff4c48;
  color: #fff;
}

.title {
  font-size: 28rpx;
  font-weight: bold;
}

.content {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  padding: 20rpx;
  margin-top: 10rpx;
}

.post-item {
  width: 45%;
  margin-bottom: 20rpx;
  background-color: #fff;
  box-shadow: 0 2rpx 5rpx rgba(0, 0, 0, 0.1);
}

.post-image {
  width: 100%;
  height: 200rpx;
}

.post-info {
  padding: 10rpx;
}

.post-title {
  font-size: 26rpx;
  color: #333;
}

.post-author {
  font-size: 24rpx;
  color: #666;
}
