.container {
  display: flex;
  flex-direction: column-reverse;
  justify-content: flex-start;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5); /* 黑色透明背景 */
  position: relative; /* 添加这一行以确保包含图片 */
}

.input-box {
  width: 80%;
  border: 1px solid #ddd;
  padding: 8px;
  border-radius: 15px; /* 圆角边框 */
  position: absolute;
  z-index: 5;
  margin-bottom: 65px;
  color: white;
}

